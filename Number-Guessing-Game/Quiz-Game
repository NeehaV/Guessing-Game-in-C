#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main()
{

    char questions[][100] = {"1. Which one is liquid?",
                             "2. What is the color of the sky?",
                             "3. Which one is a bird?"};

    char options[][100] = {"A. Pen", "B. Oil", "C. Cloth", "D. Powder",
                           "A. Black", "B. Red", "C. Blue", "D. Rose",
                           "A. Crow", "B. Cat", "C. Dog", "D. Shark"};

    char answers[3] = {'B', 'C', 'A'};

    int numberOfQuestions = sizeof(questions) / sizeof(questions[0]);
    char guess;
    int score = 0;

    printf("\n Welcome to Quiz Game\n");

    for (int i = 0; i < numberOfQuestions; i++)
    {

        printf("\n**********************\n");
        printf("%s", questions[i]);
        printf("\n**********************\n");

        for (int j = (i * 4); j < (i * 4) + 4; j++)
        {
            printf("%s\n", options[j]);
        }

        printf("Guess your answer: ");
        scanf("%c", &guess);
        fflush(stdin);
        guess = toupper(guess);
        printf("guess: %c\n", guess);
        printf("anser = %c\n", answers[i]);

        if (guess == answers[i])
        {
            printf("\nCORRECT\n");
            score++;
        }
        else
        {
            printf("\nWRONG\n");
        }
    }
    printf("\n**********************\n");
    printf("FINAL SCORE: %d/%d\n", score, numberOfQuestions);
    printf("\n**********************\n");
    return 0;
}
